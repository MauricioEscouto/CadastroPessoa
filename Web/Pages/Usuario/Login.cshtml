@page "/Usuario/Login"
@model Web.Pages.Usuario.LoginModel
@{
}

<form id="form_login" class="w-75 mt-5 p-5 border rounded-3" style="height: max-content">
	<div class="d-flex">
		<div class="w-50 d-flex flex-column mx-1">
			<h4>Login de Usuário</h4>
			<div class="d-flex flex-column justify-content-between">
				<div class="mb-3">
					<label for="input_email" class="form-label">E-mail</label>
					<input type="text" name="email" class="form-control" id="input_email" placeholder="email@email.com"  required>
				</div>
				<div class="mb-3">
					<label for="input_senha" class="form-label">Senha</label>
					<input type="password" name="senha" class="form-control" id="input_senha" placeholder="********" required>
				</div>
				<div class="w-75">
					<button id="login_btnEntrar" class="btn btn-primary w-100">Entrar</button>
				</div>
			</div>
		</div>
		<div class="d-flex w-50 justify-content-center align-items-center mx-1 border rounded-3">
			<svg xmlns="http://www.w3.org/2000/svg" width="90" height="90" viewBox="0 0 24 24" fill="none" stroke="#0d6efd" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-anchor"><circle cx="12" cy="5" r="3"></circle><line x1="12" y1="22" x2="12" y2="8"></line><path d="M5 12H2a10 10 0 0 0 20 0h-3"></path></svg>
		</div>
	</div>
</form>

<script src="~/js/Usuario/Login.js"></script>