@page
@model Web.Pages.Pessoa._PartialEnderecoModel
@{
    Layout = "_LayoutPartial";
}

<form id="form_pessoaDadosEndereco-@Model.Id" class="d-flex justify-content-between flex-wrap">
    <div class="d-flex justify-content-between flex-wrap">
        <div class="mb-3 divInput_cadastroPessoa divInput_cadastroPessoa">
            <label for="input_logradouro" class="form-label">Logradouro</label>
            <input type="text" name="logradouro" class="form-control" id="input_logradouro" required>
        </div>
        <div class="mb-3 divInput_cadastroPessoa">
            <label for="input_numero" class="form-label">Número</label>
            <input type="text" name="numero" class="form-control" id="input_numero">
        </div>
        <div class="mb-3 divInput_cadastroPessoa">
            <label for="input_cep-@Model.Id" class="form-label">CEP</label>
            <input type="text" name="cep" class="form-control" id="input_cep-@Model.Id" required>
        </div>
    </div>
    <div class="d-flex justify-content-between flex-wrap">
        <div class="mb-3 divInput_cadastroPessoa">
            <label for="input_complemento" class="form-label">Complemento</label>
            <input type="text" name="complemento" class="form-control" id="input_complemento">
        </div>
        <div class="mb-3 divInput_cadastroPessoa">
            <label for="input_cidade" class="form-label">Cidade</label>
            <input type="text" name="cidade" class="form-control" id="input_cidade" required>
        </div>
        <div class="mb-3 divInput_cadastroPessoa">
            <label for="input_estado" class="form-label">Estado</label>
            <input type="text" name="estado" class="form-control" id="input_estado" required>
        </div>
    </div>
    <div class="w-100 d-flex justify-content-end">
        <button class="btn btn-outline-danger" onclick="ActionPessoaCadastro.RemoverEndereco(@Model.Id)">Remover</button>
    </div>
</form>